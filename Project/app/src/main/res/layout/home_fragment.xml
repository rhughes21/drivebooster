<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_bookings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_bookings"
        android:layout_marginStart="3dp"
        android:textSize="25sp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_bookings_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_bookings_header"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/choose_instructor_spinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/my_bookings_recycler"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/instructor_choice_button"
        app:layout_constraintTop_toBottomOf="@id/no_instructors_available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:text="@string/choose_instructor_text"
        android:visibility="gone"
        android:background="@drawable/large_button_drawable"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/no_instructors_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_instructors_available"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/choose_instructor_spinner"
        app:layout_constraintBottom_toTopOf="@id/instructor_choice_button"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>