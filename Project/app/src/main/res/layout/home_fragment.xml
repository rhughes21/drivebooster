<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_instructors_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/no_instructors_available"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:background="@color/colorPrimaryLight30"/>

    <TextView
        android:id="@+id/no_instructors_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_instructors_available"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/instructor_choice_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_instructors_recycler"/>

    <Button
        android:id="@+id/instructor_choice_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/large_button_drawable"
        android:text="@string/choose_instructor_text"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/my_bookings_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_instructors_available" />

    <TextView
        android:id="@+id/my_bookings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upcoming_bookings"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/my_bookings_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructor_choice_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_bookings_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_bookings_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/previous_bookings_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryLight30"
        android:padding="4dp"/>

    <Button
        android:id="@+id/previous_bookings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_bookings"
        android:textColor="@color/white"
        android:padding="4dp"
        android:background="@drawable/large_button_drawable"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/manoeuvres_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_bookings_recycler" />

    <TextView
        android:id="@+id/manoeuvres_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manoeuvres"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/previous_bookings_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manoeuvres_recycler"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manoeuvres_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/manoeuvres_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryLight30"
        android:orientation="horizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>